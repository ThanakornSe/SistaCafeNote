<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tag_chip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">18</item>
        <item name="android:lineSpacingExtra">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThumbnailStyle" parent="">
        <item name="cornerSize">25%</item>
        <item name="color">@color/white</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ImageStyle" parent="">
        <item name="cornerSize">10%</item>
        <item name="color">@color/white</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="circleStyle" parent="">
        <item name="cornerSize">50%</item>
        <item name="color">@color/white</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">1dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="item_row_txt_subject">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:lineSpacingExtra">21dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edittext_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:accessibilityHeading">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">5</item>
        <item name="android:minLines">5</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/textGrey</item>
        <item name="android:nestedScrollingEnabled">true</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="edittext_NewNote_Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>