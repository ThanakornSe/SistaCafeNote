<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tag_chip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">18</item>
        <item name="android:lineSpacingExtra">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThumbnailStyle" parent="">
        <item name="cornerSize">25%</item>
        <item name="color">@color/white</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="circleStyle" parent="">
        <item name="cornerSize">50%</item>
        <item name="color">@color/white</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">1dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="item_row_txt_subject">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:lineSpacingExtra">21dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>